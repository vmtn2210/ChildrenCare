@{
    ViewData["Title"] = "managerDetailsCustomer";
    if (User.IsInRole(GlobalVariables.ManagerRole))
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (User.IsInRole(GlobalVariables.AdministratorRole))
