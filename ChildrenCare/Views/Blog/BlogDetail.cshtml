@using ChildrenCare.DTOs.BlogDTOs
@using ChildrenCare.Utilities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
    BlogDetailDTO blogDetail = ViewBag.BlogDetail;
}
<div class="container">
    <div class="blog-detail-wrapper mt-5">
        <div class="blog-detail-title text-center">
            <h1>@blogDetail.Tittle</h1>
        </div>
        <div class="blog-detail-info float-end text-center text-muted fst-italic">
            <div class="blog-detail-category">@blogDetail.CategoryName</div>
            <div class="blog-detail-updated-date">Last updated: @blogDetail.LastUpdate.ToString(GlobalVariables.DateTimeFormat)</div>
        </div>
        <div class="blog-detail-details mt-5">
            @Html.Raw(blogDetail.BlogBody)
        </div>
        <div class="blog-detail-author text-end">@blogDetail.AuthorName</div>
    </div>
</div>
